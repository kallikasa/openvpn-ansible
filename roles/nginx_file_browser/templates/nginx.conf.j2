server {
    listen 80 default_server;
    server_name _;

    root {{ nginx_container_root }};
    autoindex on;
    autoindex_exact_size off;
    autoindex_localtime on;

    location / {
        try_files $uri $uri/ =404;
    }

    location /{{ nginx_index_subdir }}/ {
        alias {{ nginx_container_root }}/{{ nginx_index_subdir }}/;
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
    }
}

